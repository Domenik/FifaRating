<Window x:Class="FifaRating.AddPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fifaRating="clr-namespace:FifaRating"
        Title="AddPlayerWindow" Height="300" Width="500"
        Background="#333">

    <DockPanel>
        <fifaRating:AddPlayerView DockPanel.Dock="Top" DataContext="{Binding}"></fifaRating:AddPlayerView>
        <Button 
            Height="30" Width="120"
            Content="Добавить" Click="AddPlayerToList"/>
    </DockPanel>
</Window>
